<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patientsFragments.MapsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical">

        <!--
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"
             android:src="@drawable/search_icon" />
            -->
         <com.google.android.material.textfield.TextInputLayout
             android:id="@+id/Services"
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="8dp"
             android:layout_marginEnd="8dp"
             android:layout_weight="1"
             android:hint="Filtra Servizi"
             app:startIconContentDescription="Goal"
             app:startIconDrawable="@drawable/search_icon">

             <AutoCompleteTextView
                 android:id="@+id/Services_list"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:imeOptions="actionNext"
                 android:editable="false"
                 android:labelFor="@id/Services_list">

             </AutoCompleteTextView>
         </com.google.android.material.textfield.TextInputLayout>



     </LinearLayout>

     <!-- Linea di separazione -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <fragment
                android:id="@+id/mapView"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

            <Button
            android:id="@+id/recensioneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:visibility="gone"
            android:layout_marginBottom="30dp"
            android:text="Recensisci"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/info_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@drawable/info_button" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/star" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/my_location_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/position" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/location" />

        </LinearLayout>

        </FrameLayout>

        <!-- Linea di separazione -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleLocation"
                style="@style/CardViewTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titolo Luogo" />

            <TextView
                android:id="@+id/addressLocation"
                android:layout_width="wrap_content"
                style="@style/CardViewDates"
                android:layout_height="wrap_content"
                android:text="Titolo Luogo" />

            <TextView
                android:id="@+id/descriptionLocation"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrizione Luogo" />



        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</ScrollView>
