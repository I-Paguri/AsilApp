<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/medications_to_purchase"
        style="@style/CardViewTitleText2"
        android:textSize="30sp"
        android:gravity="center"
        android:padding="16dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:elevation="2dp" />

    <LinearLayout
        android:id="@+id/emptyMedicationLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/emptyMedicationText"
            style="@style/CardViewSubtitleText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_medication"
            android:textSize="16sp"
            android:paddingTop="10dp" />

        <ImageView
            android:id="@+id/emptyMedicationImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_medical" />



    </LinearLayout>

</LinearLayout>